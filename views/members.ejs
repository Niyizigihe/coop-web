<h1>Cooperative Members</h1>
<a href="/members/new" class="btn" style="margin-bottom: 20px;">âž• Add New Member</a>

<% if (members && members.length > 0) { %>
  <table border="1" cellpadding="10" style="width: 100%;">
    <tr>
      <th>ID</th>
      <th>Names</th>
      <th>National ID</th>
      <th>Phone</th>
      <th>Cooperative Name</th>
      <th>Actions </th>
    </tr>
    <% members.forEach(member => { %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.names %></td>
        <td><%= member.national_id %></td>
        <td><%= member.phone %></td>
        <td><%= member.cooperative_name %></td>
        <td>
          <a href="/members/<%= member.id %>/edit" style="color: blue; text-decoration: underline; margin-right: 10px;">Edit</a>
          <form method="POST" action="/members/<%= member.id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure?');">
            <button type="submit" style="color: red; background: none; border: none; cursor: pointer; text-decoration: underline;">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
<% } else { %>
  <p>No members found. <a href="/members/new">Create one now</a></p>
<% } %>
